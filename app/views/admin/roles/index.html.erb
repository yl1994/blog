<%= legend_name("角色管理")%>
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title">角色列表</h3>
          <!-- /.box-header -->
          <div class="box-body">
            <%= link_to "新增角色", new_admin_role_path(back: request.fullpath) ,class: "btn btn-primary" %>
            <table class="table table-bordered table-striped dataTable mt10">
              <thead>
              <tr>
                <th>序号</th>
                <th>ID</th>
                <th>名称</th>
                <th>描述</th>
                <th>用户数</th>
                <th>操作</th>
              </tr>
              </thead>
              <tbody>
              <% @roles.each_with_index do |role,index| %>
                <tr>
                  <td><%= index+ 1 %></td>
                  <td><%= role.id %></td>
                  <td><%= role.name %></td>
                  <td><%= role.desc %></td>
                  <td><%= role.users.count %></td>
                  <td class="w120">
                    <div class="btn-group">
                      <button type="button" class="btn btn-info">操作</button>
                      <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                      </button>
                      <ul class="dropdown-menu" role="menu">
                        <li><%= link_to "修改",edit_admin_role_path(role,back: request.fullpath)%></li>
                        <li><%= link_to "删除",admin_role_path(role,back: request.fullpath) , :method => :delete, data: { confirm: '确定要刪除吗?' } %></li>
                      </ul>
                    </div>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
            <%= paginate @roles %>
          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
      </div>
    </div>
</section>


