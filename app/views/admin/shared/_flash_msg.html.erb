<% flash && flash.each do |status, msg| %>
  <div id="tip_msg" class="alert alert-<%= status_style status%> %> alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <h4><i class="icon fa <%= status_icon(status) %>"></i> <%= status_text(status)%></h4>
    <%= msg %>
  </div>
<% end %>
<% if flash && (flash.keys & ["error", "alert"]).blank? %>
  <script type="text/javascript">
    $(document).ready(function(){
      $('#tip_msg').fadeOut(3000);
    });
  </script>
<% end %>